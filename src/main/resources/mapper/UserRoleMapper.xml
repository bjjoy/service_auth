  <select id="getUserRoleCountByRoleId" parameterType="java.lang.Integer" resultType="java.lang.Integer">
    select count(*)
    from user_role ur, `user` u
    <where>
      ur.user_uuid = u.uuid
      and u.state = 1
      and u.del_flag = 0
      <if test="roleId != null">
